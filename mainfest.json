{
  "manifest_version": 3,
  "name": "Price Tracker",
  "version": "1.0",
  "description": "Track product prices across Flipkart, Amazon, Meesho",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": [
    "activeTab"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}